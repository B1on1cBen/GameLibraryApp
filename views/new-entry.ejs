<% include header %>

    <h2>Add new game</h2>

    <form method="POST" role="form">
        <div class="form-group">
            <label for="title">Name</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="enter name of game here..." required>
        </div>

        <div class="form-group">
            <label for="content">Description</label>
            <textarea class="form-control" id="body" name="body" placeholder="enter description for game here..." rows="3" required></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Add Entry" class="btn btn-primary" >
        </div>
    </form>

<% include footer %>